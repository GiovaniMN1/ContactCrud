@model ContactCrud.Models.Contact
@{
    ViewData["Title"] = "Detalle Contacto.";
}

<h1 class="text-center">Contactos con  net 8</h1>

<div class="row">
    <div class="offset-12">
        <div class="card-border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Crear Usuario</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Name)</li>
                    <li class="list-group"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group"><strong>Telefono: </strong>@Html.DisplayFor(m => m.PhoneNumber)</li>
                    <li class="list-group"><strong>Fecha de creacion: </strong>@Html.DisplayFor(m => m.CreationDate)</li>
                </ul>
                
                
                <a asp-controller="Inicio" asp-action="Index">Volver</a>

            </div>
        </div>
    </div>
</div>