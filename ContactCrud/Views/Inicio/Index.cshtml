@model IEnumerable<ContactCrud.Models.Contact>
@{
    ViewData["Title"] = "Lista de Contactos.";
}

<h1 class="text-center">Contactos con  net 8</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Inicio" class="btn btn-secondary d-block mx auto ">
            <i class="bi bi-plus-square"></i> Nuevo Usuario
        </a>
    </div>
</div>
<div class="row">
    <div class="offset-12">
        <div class="card-border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de Usuarios</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <!--Usamos sontaxis de Razor-->
                    <!--Si existen registros-->
                    @if (Model.Count() > 0)
                    {
                       <table class="table table-bordered" id="tblUsuarios" eidth="100%" cellspacing="0">
                           <thead>
                               <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                                    <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                                    <th>@Html.DisplayNameFor(m => m.CreationDate)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                               </tr>
                           </thead>
                           <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m=>item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Name)</td>                                                                      
                                        <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                                        <td>@Html.DisplayFor(m => item.CreationDate)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id">
                                                <i class="bi bi-info-circle"></i> Detalle
                                            </a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id">
                                                <i class="bi bi-trash3"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                       </table>
                    }
                    
                    else
                    {
                     <p>No hay registros</p>   
                    }
                </div>
            </div>
        </div>
    </div>
</div>